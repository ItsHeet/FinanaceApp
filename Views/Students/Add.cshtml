@model MyApp.Models.AddStudentViewModel

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body">
            <h2 class="text-center mb-4">Student Registration</h2>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your full name" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="Phone" class="form-control" type="tel" placeholder="Enter your phone number" required />
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Subcribed" class="form-check-input" type="checkbox" id="subscribeCheck" />
                    <label class="form-check-label" for="subscribeCheck">Subscribe to Updates</label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
